{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name":  "client",
      "image": "liraop/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name":  "nginx",
      "image": "liraop/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["server","client"]
    },
    {
      "name":  "server",
      "image": "liraop/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name":  "worker",
      "image": "liraop/multi-client",
      "essential": false
    }
  ]
}
